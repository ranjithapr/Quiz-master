<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/question1"
            style="@style/QuestionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Which is the first inscription in Kannada?"/>

        <RadioGroup
            android:id="@+id/question1_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/OptionsStyle"
            >
            <RadioButton
                android:id="@+id/question1_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halmidi inscription"/>
            <RadioButton
                android:id="@+id/question1_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belur inscription"/>
            <RadioButton
                android:id="@+id/question1_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hampi inscription"/>
            <RadioButton
                android:id="@+id/question1_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None of the above"/>
        </RadioGroup>


        <TextView
            android:id="@+id/question2"
            style="@style/QuestionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Who is called as AadiKavi in Kannada?"/>

        <RadioGroup
            android:id="@+id/question2_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/OptionsStyle"
            >
            <RadioButton
                android:id="@+id/question2_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuvempu"/>
            <RadioButton
                android:id="@+id/question2_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pampa"/>
            <RadioButton
                android:id="@+id/question2_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranna"/>
            <RadioButton
                android:id="@+id/question2_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None of the above"/>
        </RadioGroup>


        <TextView
            android:id="@+id/question3"
            style="@style/QuestionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Name the first Kannada Empire?"/>

        <RadioGroup
            android:id="@+id/question3_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/OptionsStyle"
            >
            <RadioButton
                android:id="@+id/question3_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vijayanagar Empire"/>
            <RadioButton
                android:id="@+id/question3_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pallava Empire"/>
            <RadioButton
                android:id="@+id/question3_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoysala Empire"/>
            <RadioButton
                android:id="@+id/question3_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None of the above"/>
        </RadioGroup>

        <TextView
            android:id="@+id/question3"
            style="@style/QuestionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Name the first Kannada RashtraKavi?"/>

        <RadioGroup
            android:id="@+id/question4_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/OptionsStyle"
            >
            <RadioButton
                android:id="@+id/question4_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuvempu"/>
            <RadioButton
                android:id="@+id/question4_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D R bendre"/>
            <RadioButton
                android:id="@+id/question4_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masti Venkatesha"/>
            <RadioButton
                android:id="@+id/question4_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M Govinda pai"/>
        </RadioGroup>

        <TextView
            android:id="@+id/question5"
            style="@style/QuestionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Name the first Kannada Female Poet?"/>

        <RadioGroup
            android:id="@+id/question5_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/OptionsStyle"
            >
            <RadioButton
                android:id="@+id/question5_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akkamahadevi"/>
            <RadioButton
                android:id="@+id/question5_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B Jaya"/>
            <RadioButton
                android:id="@+id/question5_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kritika"/>
            <RadioButton
                android:id="@+id/question5_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None of the above"/>
        </RadioGroup>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:onClick="submit"
                android:textColor="@android:color/black"
                android:text="Submit"/>

        </RelativeLayout>


    </LinearLayout>
</ScrollView>